---

<script>
  // Function to check authentication and handle overlay
  function handleAuth() {
    const overlay = document.querySelector('#password-overlay');
    if (sessionStorage.getItem('authenticated') === 'true') {
      overlay?.classList.add('hidden');
    } else {
      overlay?.classList.remove('hidden');
    }
  }

  // Initial check
  handleAuth();

  // Handle password form submission
  const form = document.querySelector('#password-form');
  const errorDiv = document.querySelector('#error-message');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const password = (document.querySelector('#password-input') as HTMLInputElement).value;

    if (password === 'CountryMice') {
      sessionStorage.setItem('authenticated', 'true');
      handleAuth();
    } else {
      if (errorDiv) errorDiv.textContent = 'Incorrect password. Please try again.';
    }
  });

  // Handle view transitions
  document.addEventListener('astro:page-load', () => {
    handleAuth();
  });

  // Reattach event listener after view transitions
  document.addEventListener('astro:page-load', () => {
    const form = document.querySelector('#password-form');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const password = (document.querySelector('#password-input') as HTMLInputElement).value;

      if (password === 'your-password-here') {
        sessionStorage.setItem('authenticated', 'true');
        handleAuth();
      } else {
        const errorDiv = document.querySelector('#error-message');
        if (errorDiv) errorDiv.textContent = 'Incorrect password. Please try again.';
      }
    });
  });
</script>

<div id="password-overlay" class="fixed inset-0 bg-skin-fill z-50 flex items-center justify-center p-4">
  <div class="bg-skin-card max-w-md w-full rounded-lg p-8">
    <h2 class="font-bold text-xl mb-2">Welcome to Our Wedding Site</h2>
    <p class="mb-4">Please enter the password to view the wedding details.</p>

    <form id="password-form" class="space-y-4">
      <div id="error-message" class="text-red-500"></div>
      <label for="password-input"></label><input
        type="password"
        id="password-input"
        class="w-full px-4 py-2 border rounded bg-skin-card border-skin-line focus:outline-none focus:border-skin-accent"
        placeholder="Enter password"
      />
      <button
        type="submit"
        class="w-full bg-skin-accent text-skin-inverted px-4 py-2 rounded hover:opacity-90"
      >
        Enter Site
      </button>
    </form>
  </div>
</div>

<style>
    .hidden {
        display: none;
    }
</style>